; EditorConfig is awesome: http://EditorConfig.org
root = true ; top-most EditorConfig file

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.xml]
indent_size = 4

[*.json]
indent_size = 4

[*.php]
indent_size = 4

[*.css]
indent_size = 4

[build]
indent_size = 4

[bin/jira]
indent_size = 4
